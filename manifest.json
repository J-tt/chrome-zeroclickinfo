{
    "name": "DuckDuckGo for Chrome",
    "version": "42.7.8",
    "description": "DuckDuckGo enhancements for Chrome.",
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        },
        "default_popup": "html/popup.html"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+G",
          "mac": "Alt+G",
          "linux": "Alt+G",
          "windows": "Alt+G"
        }
      }
    },
    "omnibox": {"keyword": "d"},
    "options_page": "html/options.html",
    "background": {
            "scripts": [
                "require.js",

      "privacybadger/src/bootstrap.js",
      "privacybadger/lib/punycode.js",
      "privacybadger/lib/publicSuffixList.js",
      "privacybadger/lib/basedomain.js",
      "privacybadger/lib/sha1.js",
      "privacybadger/lib/jsbn.js",
      "privacybadger/lib/rsa.js",
      "privacybadger/lib/underscore-min.js",
      "privacybadger/data/surrogates.js",
      "privacybadger/src/surrogates.js",
      "privacybadger/src/multiDomainFirstParties.js",
      "privacybadger/src/incognito.js",
      "privacybadger/src/constants.js",
      "privacybadger/src/storage.js",
      "privacybadger/src/utils.js",
      "privacybadger/src/htmlutils.js",
      "privacybadger/src/webrequest.js",
      "privacybadger/src/heuristicblocking.js",
      "privacybadger/src/socialwidgetloader.js",
      "privacybadger/src/migrations.js",
      "privacybadger/src/background.js",

      "https/rules.js",
      "https/storage.js",
      "https/util.js",
      "https/background.js",
      "https/incognito-cache-clearing.js",

                "js/background.js"]
    },
    "chrome_settings_overrides": {
      "search_provider": {
        "encoding": "UTF-8",
        "favicon_url": "https://duckduckgo.com/favicon.ico",
        "is_default": true,
        "keyword": "duckduckgo.com",
        "name": "DuckDuckGo Search",
        "search_url": "https://duckduckgo.com/?q={searchTerms}"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://*.duckduckgo.com/*", "https://duckduckgo.com/*"],
        "css": ["css/noatb.css"]
      }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage",
        "cookies",
        "privacy",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "*://*.duckduckgo.com/"
    ]
}
